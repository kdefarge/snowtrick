{% extends 'simplebase.html.twig' %}

{% block title %}{{ 'user.account.title'|trans }}{% endblock %}

{% block simplebase %}

<div class="row justify-content-center">
    <div class="col-12">
        <h1 class="mb-3 text-center">{{ 'user.account.title'|trans }}</h1>
    </div>

    <div class="col-12 text-center">

        <a class="col-12" href="{{ path('user_edit') }}">{{ 'user.edit.title'|trans }}</a>

        <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Picture_link</th>
                <td>{{ user.pictureLink }}</td>
            </tr>
            <tr>
                <th>Created_date</th>
                <td>{{ user.createdDate ? user.createdDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
        </table>

        <div class="col-12">{{ include('user/_delete_form.html.twig') }}</div>
    </div>
</div>



{% endblock %}