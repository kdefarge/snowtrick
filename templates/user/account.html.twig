{% extends 'simplebase.html.twig' %}

{% block title %}{{ 'user.title.account'|trans }}{% endblock %}

{% block simplebase %}

<div class="row justify-content-center text-center pb-3">
    <div class="col-12">
        <h1 class="mb-3">{{ 'user.title.account'|trans }}</h1>
    </div>

    <div class="col-12 mb-2">

        {{ form_start(form_profilpicture) }}
            <div class="row justify-content-center">
                <div class="col-12">
                    <h2 class="mb-3 text-center">{{ 'user.title.picture'|trans }}</h2>
                </div>
                <div class="col-10 col-sm-8 col-md-7 col-lg-5 border text-center bg-light py-3 px-sm-5">
                    <img src="{{ app.user.pictureLink ? upload_asset ~ app.user.pictureLink : asset('images/no-image.png') }}" class="rounded-circle" width="200px" height="200px" alt="">
                    <br />
                    <a class="btn btn-danger my-2" href="{{ path('user_delete_profilpicture') }}" role="button">Supprimer</a>
                    {{ form_widget(form_profilpicture) }}
                </div>
            </div>
        {{ form_end(form_profilpicture) }}

    </div>

    <div class="col-12 mb-2" id="account-edit">

        {% include 'user/_form.html.twig' with {'target_route': path('user_account', {'_fragment': 'account-edit'})} %}

    </div>

    <div class="col-12 mb-2" id="account-resetpassword">

        {% include 'reset_password/_form.html.twig' with {'target_route': path('user_account', {'_fragment': 'account-resetpassword'})} %}

    </div>
    
    
    <div class="col-12">
        <div class="row justify-content-center">
            <div class="col-12">
                <h2 class="mb-3 text-center">{{ 'user.title.delete'|trans }}</h2>
            </div>

            <div class="col-10 col-sm-8 col-md-7 col-lg-5 border text-center bg-light py-3 px-sm-5">
            
                <a class="btn btn-danger" href="#" role="button" onclick="deleteMessage('{{ path('user_delete') }}');return false;">Supprimer</a>
                
            </div>
        </div>
    </div>

</div>

{% endblock %}
