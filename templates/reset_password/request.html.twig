{% extends 'simplebase.html.twig' %}

{% block title %}{{ 'form.resetpassword.request.title'|trans }}{% endblock %}

{% block simplebase %}

{{ form_start(requestForm) }}

<div class="row justify-content-center">
    <div class="col-12">
        <h1 class="mb-3 text-center">{{ 'form.resetpassword.request.title'|trans }}</h1>
    </div>

    <div class="col-10 col-sm-8 col-md-7 col-lg-5 border text-center bg-light py-3 px-sm-5 mb-5">
    
        {{ form_row(requestForm.username) }}
        
        <div class="container p-0 m-0">
            <div id="html_element" data-public-key="{{ recaptcha_public }}" class="row justify-content-center mb-3"></div>
        </div>
        
        <button class="btn btn-primary">{{ 'form.send'|trans }}</button>
        
    </div>

</div>

{{ form_end(requestForm) }}

{% endblock %}
