{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="container-fluid bg-light px-0" id="header">

    {{ include('menu.html.twig') }}

    <div class="container-md px-0 py-5">


        <div class="row justify-content-center">
            <div class="col-12">
                <h1 class="mb-3 text-center">Enregistrement</h1>
            </div>

            <div class="col-10 col-sm-8 col-md-7 col-lg-5 border text-center bg-light py-3 px-sm-5">
            
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.username) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword) }}
                    <div class="container p-0 m-0">
                        <div id="html_element" data-public-key="{{ recaptcha_public }}" class="row justify-content-center mb-3"></div>
                    </div>
                    {{ form_row(registrationForm.save) }}
                {{ form_end(registrationForm) }}
                
                <a href="{{ path('app_forgot_password_request') }}">{{ 'form.resetpassword.reset.title'|trans }}</a>
                
            </div>
        
        </div>

        
    </div>
    
</div>

{% endblock %}
